<div class="welcome">
  <h1>
    Welcome to MyApp
  </h1>
  <p>
    Helps you connect and share with the people in your life.
  </p>
</div>
<div class="signup-frm">
<div class="alert"><%= alert %></div>
<h1>Sign up</h1>
<p>It's free and always will be...</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.text_field :username, required: true, placeholder: 'Full Name', class: 'text-field-2' %>
  </div>

  <div class="field">
    <%= f.email_field :email, required: true, placeholder: 'Email ', class: 'text-field-2' %>
  </div>

  <div class="field">
    <%= f.password_field :password, required: true, autocomplete: "off", placeholder: 'Password', class: 'text-field-2' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: 'Confirm Password', class: 'text-field-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn-signup' %>
  </div>
<% end %>
</div>