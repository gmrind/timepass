<div class="yeild">
<h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, class: 'text-field-2' %>
  </div>

  <div class="field">
    <%= f.email_field :email, class: 'text-field-2' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: 'text-field-2', placeholder: 'Change Password' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-field-2', placeholder: 'Confirm Password' %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "off", class: 'text-field-2', placeholder: 'Current Password' %><br />
  <i>We need your current password to confirm your changes.</i>
  </div>
  
  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Update Changes", class: 'btn-submit-2' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn-submit-2' %></p>

<%= link_to "Back", users_show_path, class: 'btn-link-to' %>
</div>