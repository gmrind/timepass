<div class="yeild">
<h2>Friends</h2><hr>

        <% @user.friends.each do |friend| %><br>
          <div class="thumb"><%= image_tag(friend.avatar.url(:thumb)) %></div>
          <div><strong><%= friend.username %></strong></div> 
          <% if current_user == @user %>
          <div><%= link_to "Remove friend", friendship_path(:id => friend), :method => :delete %></div>
          <% end %>
      <% end %>
</div>